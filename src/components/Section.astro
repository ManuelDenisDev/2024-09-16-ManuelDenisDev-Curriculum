---
const { titulo } = Astro.props
---

<section>
    {titulo && <h2>{titulo}</h2>}
    <slot />
</section>

<style>
    section {
        max-width: 700px;
        margin: 0 auto 2.8em;
    }

    h2 {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        line-height: 1.4;
    }

    @media print {
        h2 {
            font-size: 1.2rem;
        }
        section {
            margin-bottom: 1em;
        }
    }
</style>
