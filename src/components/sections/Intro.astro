---
import { basica } from '@cv'
import Section from '@/components/Section.astro'
import Mail from '@/icons/Mail.astro'
import Phone from '@/icons/Phone.astro'
import WorldMap from '@/icons/WorldMap.astro'
import GitHub from '@/icons/GitHub.astro'
import LinkedIn from '@/icons/LinkedIn.astro'
import X from '@/icons/X.astro'

const { nombre, descripcion, imagen, email, telefono, url, redesSociales } = basica
const { ciudad, pais } = basica.localizacion

const SOCIAL_ICONS: Record<string, any> = {
    GitHub,
    LinkedIn,
    X,
}

const linkedInfo = redesSociales.find(({ nombre }) => nombre === 'LinkedIn')
const linkedUrl = linkedInfo?.url

const imprimirInfo = [email, telefono, linkedUrl].filter(Boolean).join(' • ')
---

<Section>
    <div class='container'>
        <div class='info'>
            <h1>{nombre}</h1>
            <h2>{descripcion}</h2>
            <span>
                {ciudad}, {pais}
            </span>
            <footer class='print'>
                {imprimirInfo}
            </footer>
            <footer class='no-print'>
                {
                    email && (
                        <a
                            href={`mailto:${email}`}
                            title={`Enviar un correo a ${nombre} al correo ${email}`}
                            target='_blank'
                            rel='noopener noreferrer'
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    telefono && (
                        <a
                            href={`tel:${telefono}`}
                            title={`Llamar por teléfono a ${nombre} al número ${telefono}`}
                            target='_blank'
                            rel='noopener noreferrer'
                        >
                            <Phone />
                        </a>
                    )
                }
                {
                    url && (
                        <a
                            href={url}
                            title={`Visitar el sitio web de ${nombre}`}
                            target='_blank'
                            rel='noopener noreferrer'
                        >
                            <WorldMap />
                        </a>
                    )
                }
                {
                    basica.redesSociales.map(({ nombre, url, username }) => {
                        const Icon = SOCIAL_ICONS[nombre]
                        return (
                            <a
                                href={url}
                                title={`Visitar el perfil de ${username} en ${nombre}`}
                                target='_blank'
                                rel='noopener noreferrer'
                            >
                                <Icon />
                            </a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={imagen} alt={nombre} />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }
    figure {
        background: rgb(255, 255, 255);
        background: radial-gradient(circle, rgba(255, 255, 255, 1) 0%, rgba(0, 0, 0, 1) 100%);
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 128px;
        border-radius: 16px;
    }

    span {
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
    }

    footer {
        color: #555;
        font-size: 0.65rem;
        display: flex;
        gap: 4px;
        margin-top: 8px;
    }

    footer a {
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    footer a:hover {
        background: #eee;
        border: 1px solid #ddd;
    }

    @media (width <= 700px) {
        .container {
            flex-direction: column-reverse;
        }

        .info {
            justify-content: center;
            align-items: center;
            padding-right: 0;
            text-align: center;
        }

        figure {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        h2 {
            text-wrap: balance;
        }

        figure {
            margin: 0 auto;
        }
    }
</style>
